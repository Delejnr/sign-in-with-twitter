.page-header
  %h1
    = @user.name
    %small
      = "@#{@user.screen_name}"
  - unless @user.description.blank?
    %h6
      = @user.description
.row
  .span2
    %ul.thumbnails
      %li
        %a.thumbnail{:href => @user.url}
          %img{:src => "https://api.twitter.com/1/users/profile_image?screen_name=#{@user.screen_name}&size=bigger", :alt => @user.name}
  .span9
    %table
      %thead
        %tr
          %th
            = t("th.location")
          %th
            = t("th.tweets")
          %th
            = t("th.following")
          %th
            = t("th.followers")
          %th
            = t("th.favorites")
          %th
            = t("th.listed")
      %tbody
        %tr
          %td
            %address
              = @user.location
          %td
            = number_with_delimiter @user.statuses_count
          %td
            = number_with_delimiter @user.friends_count
          %td
            = number_with_delimiter @user.followers_count
          %td
            = number_with_delimiter @user.favourites_count
          %td
            = number_with_delimiter @user.listed_count
.row
  .span2
    = form_tag(signout_path, :method => 'delete') do
      %button.btn.danger#sign_out
        = t("button.sign_out")
  .span9
    - unless @user.status.blank?
      %blockquote
        %q{:cite => "https://twitter.com/#{@user.screen_name}/status/#{@user.status.id}"}
          %p
            = auto_link(@user.status.text).html_safe
        %small
          = t("time.ago", :time => time_ago_in_words(@user.status.created_at).capitalize)
          = t("via.source", :source => @user.status.source).html_safe
